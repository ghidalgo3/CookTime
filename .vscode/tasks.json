{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "dependsOn": [
                "Webpack dev server",
                "build"
            ]
        },
        {
            "label": "Webpack dev server",
            "command": "npm",
            "args": ["start"],
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": "relative",
                "pattern": {
                  "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                  "file": 1,
                  "location": 2,
                  "severity": 3,
                  "code": 4,
                  "message": 5
                },
                "background": {
                  "activeOnStart": true,
                  "beginsPattern": "modules by path",
                  "endsPattern": "compiled successfully"
                }
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/babe-algorithms.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/babe-algorithms.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "isBackground": true,
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/babe-algorithms.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        }
    ]
}