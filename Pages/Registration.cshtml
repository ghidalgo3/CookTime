@page
@model babe_algorithms.Pages.RegistrationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_PlainLayout";
}

<div class="container margin-top-625rem">
    <div class="row justify-content-md-center">
        <div class="col-lg max-width-34rem">

            <div id="name" class="card margin-bottom-5percent display-none min-height-15rem">
                <div class="card-body margin-25rem">
                    <h5 class="card-title">Your email was confirmed!</h5>
                    <h5 class="card-title">Let's continue your sign up. What's your name?</h5>
                    <div class="card-text">
                        <form class="form" method="POST">
                            <div class="form-group mx-auto">
                                <input name="name" class="form-control bg-light" placeholder="e.g. John Snow">
                            </div>
                            <input type="submit" class="btn btn-success btn-large btn-block mx-auto" asp-page-handler="Name" value="Submit">
                        </form>
                    </div>
                </div>
            </div>

            <!-- Keep this in sync with ResetPassword.cshtml -->
            <div id="password" class="card min-height-15rem margin-bottom-5percent display-none">
                <div class="card-body margin-25rem">
                    <h5 class="card-title">Create your password</h5>
                    <div class="card-text">
                        <form id="passwordForm" class="form" method="POST">
                            <div class="form-group mx-auto">
                                <ul>
                                    <li>At least 10 characters</li>
                                    <li>At least 2 unique characters</li>
                                </ul>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" type="password" class="form-control bg-light" placeholder="Password">
                                <p class="margin-top-1rem">
                                    Confirm your password
                                </p>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control bg-light" placeholder="Confirm password">
                            </div>
                            <input type="submit" class="btn btn-success btn-large btn-block mx-auto" asp-page-handler="Password" value="Submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/registration.js" asp-append-version="true"></script>
